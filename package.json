{
    "$schema": "https://json.schemastore.org/package.json",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build",
        "dev": "vite",
        "prepare": "husky install"
    },
    "dependencies": {
        "@uppy/core": "^4.0.0",
        "@uppy/dashboard": "^4.0.0",
        "@uppy/tus": "^4.0.0",
        "@uppy/xhr-upload": "^4.0.0"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.34.0",
        "@tailwindcss/vite": "^4.0.0",
        "axios": "^1.11.0",
        "concurrently": "^9.0.1",
        "eslint": "^9.34.0",
        "globals": "^16.3.0",
        "husky": "^8.0.0",
        "laravel-vite-plugin": "^2.0.0",
        "lint-staged": "^16.1.5",
        "prettier": "^3.6.2",
        "tailwindcss": "^4.0.0",
        "vite": "^7.0.4"
    },
    "lint-staged": {
        "*.php": [
            "sail pint --dirty",
            "sail php ./vendor/bin/phpstan analyse --memory-limit=512M"
        ],
        "resources/js/**/*.js": [
            "eslint --fix",
            "prettier --write"
        ],
        "resources/views/**/*.blade.php": [
            "prettier --write"
        ]
    }

}
